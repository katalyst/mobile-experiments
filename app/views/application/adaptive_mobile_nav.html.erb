              <li>
                <%= link_to k, "#" %>
                <% if v.present? %>
                  <ul>
                    <% v.each do |c| %>
                      <li><%= link_to k+c, "#" %></li>
                    <% end %>
                  </ul>
                <% end %>
              </li>
            <% end %>
          </ul>
        </nav>
