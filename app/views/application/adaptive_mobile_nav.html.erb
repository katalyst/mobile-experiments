    <title>Adaptive Mobile Nav</title>
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0" />
    <%= stylesheet_link_tag    "adaptive-mobile-nav", :media => "all" %>
    <%= javascript_include_tag "adaptive-mobile-nav" %>
    <%= csrf_meta_tags %>
  </head>
